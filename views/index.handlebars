<div class="container-fluid bg-warning">
    <div class="row">
        <h1 class="text-danger">Eat Da Burger!</h1>
    </div>
    <div class="row">
        <div class="col-6">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{id}}. {{name}}
                    <button class="devour" data-id="{{id}}">Devour It!</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li class="text-muted">
                    {{id}}. {{name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <form id="create-form">

            <div class="form-group">
                <label for="burgerName" class="form-label">Burger Name</label>
                <textarea class="form-control" id="burgerName" rows="3"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>

        </form>
    </div>

</div>