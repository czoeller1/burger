<div class="container-fluid bg-warning">
    <div class="row">
        <h1 class="text-danger">Eat Da Burger!</h1>
    </div>
    <div class="row">
        <div class="col-6">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{id}}. {{name}}
                    <button class="devour" data-id="{{id}}">Devour It!</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li class="text-muted">
                    {{id}}. {{name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">

    </div>

</div>